<h1>Articles</h1>

<p>
  <%= link_to 'New Article', new_article_path, class: 'btn btn-success' %>
</p>
<table class='table table-hover table-striped'>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th colspan='3'></th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.description %></td>
      <td><%= link_to 'Show', article_path(article), class: 'btn btn-info' %></td>
      <td><%= link_to 'Edit', edit_article_path(article), class: 'btn btn-primary' %></td>
      <td><%= link_to 'Delete', article_path(article), method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>